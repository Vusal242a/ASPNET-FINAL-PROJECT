@model ASPNetFinal.Models.Entity.Person
@{ Layout = null;}
<h5 class="tittle">Professional Details</h5>


<form method="post" action="@Url.Action("AddDetail","Dashboard")" enctype="multipart/form-data">
    <div class="form-group">
        <label class="form-control image-container" style="height:250px; padding:0px;margin:0px;">
            <img src="@(string.IsNullOrWhiteSpace(Model.Image)?"":Href("~/Template/Media/"+Model.Image))" id="news-image" style="width:100%;height:100%;"/>
            <i class="empty-icon"></i>
            <a href="javascript:removePhoto()"><i class="clear-icon header-right-button"></i></a>
            @Html.EditorFor(model => model.Image,
                              new { htmlAttributes = new { @class = "form-control", type = "file", style = "display:none", accept = "image/*", onchange = "readURL(this)", id = "mediaUrl" } })
        </label>
        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
    </div>
    <ul class="personal-info">
        <li>
            <p>
                <span>
                    Name
                    <input class="form-control" type="text" value="@Model.Name" name="Name">
                </span>
                <span>
                    Age
                    <input class="form-control" type="text" value="@Model.Age" name="Age">
                </span>
                <span>
                    Location
                    <input class="form-control" type="text" value="@Model.Location" name="Location">
                </span>
                <span>
                    Experience
                    <input class="form-control" type="text" value="@Model.Experience" name="Experience">
                </span>
                <span>
                    Degree
                    <input class="form-control" type="text" value="@Model.Degree" name="Degree">
                </span>
                <span>
                    Career Level
                    <input class="form-control" type="text" value="@Model.CareerLevel" name="CareerLevel">
                </span>
                <span>
                    Email
                    <input class="form-control" type="text" value="@Model.Email" name="Email">
                </span>
                <span>
                    Phone
                    <input class="form-control" type="text" value="@Model.Phone" name="Phone">
                </span>
                <span>
                    Web Site
                    <input class="form-control" type="text" value="@Model.Website" name="Website">
                </span>
                <span>
                    Fax
                    <input class="form-control" type="text" value="@Model.Fax" name="Fax">
                </span>
            </p>
        </li>
        <li> <button href="#" class="btn" type="submit"><i class="fa fa-plus"></i> ADD INFO</button> </li>
    </ul>
</form>
