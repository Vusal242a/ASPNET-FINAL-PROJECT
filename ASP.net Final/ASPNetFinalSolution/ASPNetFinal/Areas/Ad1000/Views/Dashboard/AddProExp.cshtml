@model ASPNetFinal.Models.Entity.ProfessionalExperience

@{ Layout = null;}

<div class="inside-sec margin-top-30">
    <!-- Professional Experience -->
    <h5 class="tittle">Professional Experience</h5>
    <div class="padding-30 exp-history">
        @Html.Action("RefreshProExpPOST", "Dashboard")
        <!-- ADD Professional -->
        <form method="post" action="@Url.Action("AddProEx","Dashboard")" enctype="multipart/form-data">
            <div class="exp">
                <div class="row">
                    <div class="col-sm-7">
                        <label>
                            Duration
                            <input type="text" class="form-control" name="Duration">
                        </label>
                        <label>
                            Job Title
                            <input type="text" class="form-control" name="JobTitle">
                        </label>
                        <label>
                            Company Name
                            <input type="text" class="form-control" name="CompanyName">
                        </label>
                        <label>
                            Location
                            <input type="text" class="form-control" name="Location">
                        </label>
                    </div>

                    <!-- UPLOAD IMG -->
                    <div class="col-sm-5">
                        <label class="form-control image-container" style="height:250px; padding:0px;margin:0px;">
                            <img src=" " id="news-image" style="width:100%;height:100%;" />
                            <i class="empty-icon"></i>
                            <a href="javascript:removePhoto()"><i class="clear-icon header-right-button"></i></a>
                            @Html.EditorFor(model => model.Image,
                                              new { htmlAttributes = new { @class = "form-control", type = "file", style = "display:none", accept = "image/*", onchange = "readURL(this)", id = "mediaUrl" } })
                        </label>
                    </div>

                    <!-- ADD DETAILS -->
                    <div class="col-sm-12">
                        <label>
                            Details
                            <textarea class="form-control" name="Details"></textarea>
                        </label>
                        <!-- ADD MORE-->
                        <button href="#" type="submit" class="btn margin-top-20"><i class="fa fa-plus"></i> Add Experience</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>