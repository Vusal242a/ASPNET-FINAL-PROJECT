@model IEnumerable<ASPNetFinal.Models.Entity.BioSkills>
@{ Layout = null;}

<h5 class="tittle">Bio & Skills</h5>
<div class="bio-info padding-30">
    <form method="post" action="@Url.Action("BioSkills","Dashboard")">
        <textarea class="form-control" placeholder="Description" name="Description"></textarea>
        <div class="skills margin-top-50">

            <!-- SKILLS -->
            <h6>Add A Skill</h6>
            <!-- Sound Engineering -->
            <div class="row">

                <!-- Categories -->
                @Html.Action("Catego", "Dashboard")

                <!--  Skills -->
                @Html.Action("Skills", "Dashboard")
            </div>

            <!-- Disply Type -->
            <div class="disply-type">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="radio radio-inline">
                            <input type="radio" id="inlineRadio1" value="true" name="AsBar">
                            <label for="inlineRadio1"> Display As Bar </label>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="radio radio-inline">
                            <input type="radio" id="inlineRadio2" value="true" name="AsTag">
                            <label for="inlineRadio2"> Display As Tag </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Skill Info -->
            <div class="skill-type-info">
                <label>
                    Skill Level
                    <input type="text" class="form-control" placeholder="Skill Level" name="SkillLeve">
                </label>
                <label>
                    Skill Description
                    <textarea class="form-control" placeholder="Skill Description" name="SkillDescription"></textarea>
                </label>
            </div>
            <!-- ADD MORE-->
            <button href="#" class="btn" type="submit"><i class="fa fa-plus"></i> Add Skill</button>
        </div>
    </form>
</div>
