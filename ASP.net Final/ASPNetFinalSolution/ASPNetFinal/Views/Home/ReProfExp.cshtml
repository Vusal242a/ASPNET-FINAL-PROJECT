@model IEnumerable<ASPNetFinal.Models.Entity.ProfessionalExperience>
@{
    Layout = null;
}

<div class="inside-sec margin-top-30">
    <!-- Professional Experience -->
    <h5 class="tittle">Professional Experience</h5>
    <div class="padding-30 exp-history">
        @foreach (var item in Model)
        {
            <div class="exp">
                <div class="media-left"> <span class="sun">@item.Duration</span> </div>
                <div class="media-body">

                    <!-- COmpany Logo -->
                    <div class="company-logo" style="width:100px; height:100px">
                        <input name="fileName" id="fileName"
                               value="@(string.IsNullOrWhiteSpace(item.Image)?"":Href("~/Template/media/"+item.Image))"
                               type="hidden" />
                        <img src="@(string.IsNullOrWhiteSpace(item.Image)?"":Href("~/Template/Media/"+item.Image))" id="news-image" />
                    </div>
                    <h6>@item.CompanyName</h6>
                    <p>@item.JobTitle</p>
                    <p>@item.Location</p>
                    <p class="margin-top-10">@item.Details <a href="#.">Read More</a> </p>
                </div>
            </div>
        }
    </div>
</div>
